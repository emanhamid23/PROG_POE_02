
@model IEnumerable<PROG_POE_02.Models.Product>

@{
    ViewBag.Title = "Index";
}
<body style="background-color: #D5DBDB ">
    <h1 style="font-family: 'Times New Roman'; font-weight: bold">Farm Central</h1>
    <h2 style="font-family: 'Times New Roman'">Products</h2>
    <h4 style="font-family: 'Times New Roman'">The following is the list of products available</h4>

    <br />
    <a href="/Employee/ViewFarmers" class="link-primary">View all Farmers</a>
    <br />
    <br />

    <form method="get" action="/Product/ViewProducts">
       @Html.TextBox("searching", null, new { @class = "form-control", @placeholder = "Product Type" })
       <input type="submit" value="submit" placeholder="Product type"/>
       <br />
        <br />
        <div>
            <table class="table">

                <thead>
                    <tr>
                        <th scope="col" style="font-family: 'Times New Roman'; font-size: large;">Product Name</th>
                        <th scope="col" style="font-family: 'Times New Roman'; font-size: large;">Product Description</th>
                        <th scope="col" style="font-family: 'Times New Roman'; font-size: large;">Product Type</th>
                    </tr>
                </thead>

                <tbody>
                    @for (int i = 0; i < Model.ToList().Count; i++)
                    {
                        <tr>
                            <td style="font-family: 'Times New Roman'; font-size: large;">@Model.ToList()[i].Product_name</td>
                            <td style="font-family: 'Times New Roman'; font-size: large;">@Model.ToList()[i].Product_description</td>
                            <td style="font-family: 'Times New Roman'; font-size: large;">@Model.ToList()[i].Product_Type</td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
        <a href="/Employee/ViewFarmers" class="link-primary" style="font-family: 'Times New Roman'; font-size: large;">Back</a>
    </form>

</body>